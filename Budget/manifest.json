      "48": "get_started48.png",
      "128": "get_started128.png"
    }
  },

  "options_page" : "options.html",

  "permissions": [
    "storage",
    "notifications"
  ],

  "web_accessible_resources": [
    "images/get_started48.png"
  ]
}