{
  "manifest_version": 2,
  "name": "Budget",
  "version": "1.0",
  "description": "Budget Extension!",
  "options_page" : "options.html",

  "icons": {
    "16": "get_started16.png",
    "32": "get_started32.png",
    "48": "get_started48.png",
    "128": "get_started128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "get_started16.png",
      "32": "get_started32.png",
      "48": "get_started48.png",
      "128": "get_started128.png"
    }
  },

  "background" : {
    "scripts" : ["eventPage.js"],
    "persistent" : false
  },

  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],

  "content_security_policy": "media-src 'self' https://www.reddit.com/; object-src 'self' https://www.reddit.com/; script-src 'self' https://www.reddit.com/;"
}